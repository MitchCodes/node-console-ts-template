/**
 * This starter project recommended using Microsoft TSLint rules.
 * Please see https://github.com/Microsoft/tslint-microsoft-contrib for more details.
 */

{
  "extends": [
    "tslint-microsoft-contrib"
  ],
  "rules": {
    "mocha-no-side-effect-code": false,
    "missing-jsdoc": false,
    "no-relative-imports": false,
    "export-name": false,
    "promise-function-async": false,
    "no-void-expression": false,
    "no-redundant-jsdoc": false,
    "linebreak-style": false,
    "prefer-const": false,
    "no-trailing-whitespace": false,
    "ordered-imports": false,
    "prefer-template": false,
    "no-backbone-get-set-outside-model": false,
    "no-any": false,
    "no-this-assignment": false,
    "no-var-self": false,
    "no-debugger": false,
    "max-line-length": false,
    "no-floating-promises": false,
    "restrict-plus-operands": false,
    "completed-docs": false,
    "no-http-string": false,
    "align": false,
    "no-string-literal": false,
    "no-shadowed-variable": false,
    "insecure-random": false,
    "interface-name": false, // https://github.com/Microsoft/TypeScript/wiki/Coding-guidelines <-- interfaces should not start with I
    "trailing-comma": [ // https://palantir.github.io/tslint/rules/trailing-comma/
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "typedef": [
      true,
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration"
    ]
  }
}